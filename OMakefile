PRODUCT = polysat

OCAMLCFLAGS += -g -safe-string -bin-annot -annot

USE_OCAMLFIND = true
OCAMLPACKS += num ppx_deriving.std sexplib

# OMake has no default rules to build information files.
%.annot %.cmt: %.ml %.cmi
	$(OCamlC) -c $<

%.cmti: %.mli
	$(OCamlC) -c $<

.PHONY: doc test clean

.SUBDIRS: src test

.DEFAULT: src/$(PRODUCT)
	cp src/$(PRODUCT) $(PRODUCT)

clean:
	rm -f $(PRODUCT)
